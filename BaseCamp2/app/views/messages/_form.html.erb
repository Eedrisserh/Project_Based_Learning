<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this thread from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li> 
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :@user_id, value: current_user.id %>  
 
  <div class="form-group">
  <%= form.text_area :content, class: "form-control", id: "content", rows: 3, placeholder: "What's on your mind?" %>
</div>

<div classname="last" style="display: flex; justify-content: space-between">
  <%= form.submit "Post Thread", class:"btn btn-primary" %>
<% end %>
